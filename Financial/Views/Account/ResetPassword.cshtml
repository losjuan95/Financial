@model Financial.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Sign In | FinPort</title>
    <!-- Favicon-->
    <link rel="icon" href="~/images/core icon 1.png" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Waves Effect Css -->
    <link href="~/Content/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="~/Content/animate.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body class="login-page">
    <div class="login-box">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            @Html.AntiForgeryToken()
            <div class="logo">
                <a href="javascript:void(0);">Fin<b>Port</b></a>
                <small>A better way to Budget</small>
            </div>
            <div class="card">
                <div class="body">
                    <form id="sign_in">
                        <div class="msg">Sign in to start your session</div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">person</i>
                            </span>
                            <div class="form-line">
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })

                            </div>

                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">lock</i>
                            </span>
                            <div class="form-line">

                                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })

                            </div>
                            <div class="form-line">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })

                            </div>
                        </div>
                        <div class="row">

                            <div class="col-xs-4">
                                <button class="btn btn-block bg-pink waves-effect" type="submit">SIGN IN</button>
                            </div>
                        </div>
                        <div class="row m-t-15 m-b--20">
                            <div class="col-xs-6">
                                @Html.ActionLink("Register Now!", "Register", "Account")
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        }


    </div>
    <!-- Jquery Core Js -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="~/Scripts/bootstrap.js"></script>
    <!-- Waves Effect Plugin Js -->
    <script src="~/Scripts/waves.js"></script>
    <!-- Validation Plugin Js -->

    <script src="~/Scripts/jquery.validate.js"></script>
    <!-- Custom Js -->
    <script src="~/Scripts/admin.js"></script>
    <script src="~/Scripts/sign-in.js"></script>
</body>
</html>