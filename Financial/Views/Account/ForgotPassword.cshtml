@model Financial.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Sign In | Bootstrap Based Admin Template - Material Design</title>
    <!-- Favicon-->
    <link rel="icon" href="~/img/core icon 1.png" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Waves Effect Css -->
    <link href="~/Content/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="~/Content/animate.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body class="fp-page">
    <div class="fp-box">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <div class="logo">
                <a href="javascript:void(0);">Fin<b>Port</b></a>
                <small>A better way to Budget</small>
            </div>
            <div class="card">
                <div class="body">
                    <form id="forgot_password">
                        <div class="msg">
                            Enter your email address that you used to register. We'll send you an email with your username and a
                            link to reset your password.
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">email</i>
                            </span>
                            <div class="form-line">
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                            </div>
                        </div>
                        <button class="btn btn-block btn-lg bg-pink waves-effect" type="submit">RESET MY PASSWORD</button>
                        <div class="row m-t-20 m-b--5 align-center">
                            @Html.ActionLink("Sign In!", "Login", "Account")
                        </div>
                    </form>
                </div>
            </div>

        }
    </div>
    <!-- Jquery Core Js -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="~/Scripts/bootstrap.js"></script>
    <!-- Waves Effect Plugin Js -->
    <script src="~/Scripts/waves.js"></script>
    <!-- Validation Plugin Js -->

    <script src="~/Scripts/jquery.validate.js"></script>
    <!-- Custom Js -->
    <script src="~/Scripts/admin.js"></script>
    <script src="~/Scripts/sign-in.js"></script>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
