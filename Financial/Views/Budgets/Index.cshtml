@model IEnumerable<Financial.Models.Budget>

@{
    ViewBag.Title = "Index";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table jq-data">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.HouseHold)
                        </th>
                        <th>
                            @Html.DisplayName("Catergory")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TargetTotal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CurrentTotal)
                        </th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.HouseHold.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TargetTotal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CurrentTotal)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>


                    }
                </tbody>
                </table>

        </div>
    </div>
</section>
